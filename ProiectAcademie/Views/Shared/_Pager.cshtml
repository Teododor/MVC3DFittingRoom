@model Pager;
@*@model Proiect.BusinessLogic.Implementation.Product.Models*@
<div class="container">
	@if (Model.TotalPages > 0)
	{
		<ul class="pagination justify-content-end">


			@if (Model.CurrentPage > 1)
			{
				<li class="page-item">
					<a class="page-link" asp-controller="Product" asp-action="Index" asp-route-pg="1" asp-route-SearchText="@Model.SearchText">First</a>
				</li>

				<li>
					<a class="page-link" asp-controller="Product" asp-action="Index" asp-route-pg="@(Model.CurrentPage-1)" asp-route-SearchText="@Model.SearchText">
						Previous
					</a>
				</li>
			}

			@for (var pge = Model.StartPage; pge <= Model.EndPage; pge++)
			{
				<li class="page-item @(pge == Model.CurrentPage ? "active" : "")">
					<a class="page-link" asp-controller="Product" asp-action="Index" asp-route-pg="@pge" asp-route-SearchText="@Model.SearchText">@pge </a>
				</li>
			}

			@if (Model.CurrentPage < Model.TotalPages)
			{
				<li class="page-item">
					<a class="page-link" asp-controller="Product" asp-action="Index" asp-route-pg="@(Model.CurrentPage + 1)" asp-route-SearchText="@Model.SearchText">Next</a>
				</li>

				<li>
					<a class="page-link" asp-controller="Product" asp-action="Index" asp-route-pg="@(Model.TotalPages)" asp-route-SearchText="@Model.SearchText">Last </a>
				</li>
			}


		</ul>
	}
</div>